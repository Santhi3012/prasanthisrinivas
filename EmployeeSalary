package santhi;
import java.util.*;
import java.lang.String;

public class EmployeeSalary {
	 public static void main(String[] args)
	 {
		 Scanner sc = new Scanner(System.in);

		 System.out.print("Enter Employee Name: ");
		 String name = sc.next();
		 System.out.print("Enter Basic Salary: ");
		 double salary = sc.nextDouble();
		 System.out.print("Enter House Rent (HR): ");
	     double hr = sc.nextDouble();
	     System.out.print("Enter Provident Fund (PF): ");
	     double pf = sc.nextDouble();
	     double total = salary + hr - pf;
	     if (total < 50000) {
	    	 total += 5000;
	    	 System.out.println("Bonus of 5000 applied for " + name + ".");
	    	 }
	     System.out.println("Final Salary after all reductions and bonus: " + total);
	  }
	}

